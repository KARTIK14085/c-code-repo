c++ code

#include <iostream>
#include <fstream>
#include <string>

using namespace std;
void registerUser();
void loginUser();
void forgotPassword();

int main() {
    int choice;
    do {
        cout << "\n--- Menu ---\n";
        cout << "1. Register\n";
        cout << "2. Login\n";
        cout << "3. Forgot Password (Optional)\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                registerUser();
                break;
            case 2:
                loginUser();
                break;
            case 3:
                forgotPassword(); 
                break;
            case 4:
                cout << "Exiting...\n";
                break;
            default:
                cout << "Invalid choice. Please try again.\n";
        }
    } while (choice != 4);

    return 0;
}
void registerUser() {
    string username, password;
    cout << "Enter username: ";
    cin >> username;
    cout << "Enter password: ";
    cin >> password;

    ofstream file("internship.txt", ios::app); 
    if (!file) {
        cout << "Error opening file!\n";
        return;
    }

    file << username << " " << password << "\n";
    file.close();

    cout << "User registered successfully!\n";
}
void loginUser() {
    string username, password, u, p;
    cout << "Enter username: ";
    cin >> username;
    cout << "Enter password: ";
    cin >> password;

    ifstream file("internship.txt");
    if (!file) {
        cout << "No users registered yet.\n";
        return;
    }

    bool found = false;
    while (file >> u >> p) {
        if (u == username && p == password) {
            found = true;
            break;
        }
    }
    file.close();

    if (found)
        cout << "Login successful! Welcome, " << username << ".\n";
    else
        cout << "Invalid username or password.\n";
}
void forgotPassword() {
    string username, u, p;
    cout << "Enter username to retrieve password: ";
    cin >> username;

    ifstream file("internship.txt");
    if (!file) {
        cout << "No users registered yet.\n";
        return;
    }

    bool found = false;
    while (file >> u >> p) {
        if (u == username) {
            found = true;
            cout << "Password for " << username << " is: " << p << "\n";
            break;
        }
    }
    file.close();

    if (!found) {
        cout << "Username not found.\n";
    }
}
